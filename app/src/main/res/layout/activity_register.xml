<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_one"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <LinearLayout
        android:id="@+id/linearRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginHorizontal="48dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/createText"
            style="@style/login_text_view"
            android:layout_width="wrap_content"
            android:layout_marginBottom="15dp"
            android:drawableStart="@mipmap/ic_launcher"
            android:text="@string/createText"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/username"
            style="@style/editText_style"
            android:inputType="textPersonName"
            android:hint="Name" />

        <EditText
            android:id="@+id/inputEmail"
            android:hint="Email"
            style="@style/editText_style"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/inputPass"
            android:hint="Password"
            style="@style/editText_style"
            android:inputType="textPassword" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:text="@string/backToLoggin"/>

            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/signUp"
                style="@style/login_buttons"
                android:text="@string/signUp" />

        </LinearLayout>

        <TextView
            android:id="@+id/termsText"
            style="@style/login_text_view"
            android:text="@string/termsText"
            android:textSize="14sp" />
        <include layout="@layout/separator_layout"></include>
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </LinearLayout>

</LinearLayout>